<form onsubmit={{action "submitChanges"}}>

    <div class="field">
        <label>First name: </label>
        {{input 
                    type="text" 
                    placeholder="First Name" 
                    value=first 
                    }}
    </div>

    <div class="field">
        <label>Last Name: </label>
        {{input 
                    type="text" 
                    placeholder="Last Name" 
                    value=last 
                    }}
    </div>

    <div class="form-footer">
        <button type="text">save</button>
    </div>
</form>